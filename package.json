{
  "name": "Fluid-Img",
  "version": "0.1.0",
  "description": "A web component for displaying images that intelligently resize to fit most any container.",
  "author": "Voice NPO, Inc.",
  "license": "Fluid-Img Revenue-Limited License",
  "type": "module",
  "main": "./dist/fluid-img.js",
  "module": "./dist/fluid-img.js",
  "types": "./dist/fluid-img.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": "./dist/fluid-img.js",
    "./random": "./dist/fluid-img-random.js",
    "./predictive": "./dist/fluid-img-predictive.js"
  },
  "scripts": {
    "test": "vitest -t \"^[^@]+$\"",
    "test:live": "vitest -t \"@LIVE\"",
    "test:watch": "vitest watch",
    "build": "npm run build:esbuild:all && npm run build:esbuild:random && npm run build:esbuild:predictive && npm run build:esbuild:demo && npm run copy-to-docs",
    "watch": "npm run watch:esbuild:all & npm run watch:esbuild:random & npm run watch:esbuild:predictive & npm run watch:esbuild:demo",
    "build:esbuild": "esbuild src/renderer/web-component/web-component.ts --define:ALL_GENERATORS=false --define:RANDOM_GENERATOR=false --define:PREDICTIVE_GENERATOR=false --define:DEMO=false --bundle --minify --sourcemap --target=esnext",
    "build:esbuild:demo": "npm run build:esbuild:all -- --define:DEMO=true --outfile=dist/fluid-img-demo.js",
    "build:esbuild:all": "npm run build:esbuild -- --define:RANDOM_GENERATOR=true --define:PREDICTIVE_GENERATOR=true --outfile=dist/fluid-img.js",
    "build:esbuild:random": "npm run build:esbuild -- --define:RANDOM_GENERATOR=true --outfile=dist/fluid-img-random.js",
    "build:esbuild:predictive": "npm run build:esbuild -- --define:PREDICTIVE_GENERATOR=true --outfile=dist/fluid-img-predictive.js",
    "watch:esbuild:demo": "npm run build:esbuild:demo -- --watch",
    "watch:esbuild:all": "npm run build:esbuild:all -- --watch",
    "watch:esbuild:random": "npm run build:esbuild:random -- --watch",
    "watch:esbuild:predictive": "npm run build:esbuild:predictive -- --watch",
    "copy-to-docs": "cp ./dist/* ./docs/public/."
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tinybench": "^4.0.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@types/node": "^22.15.21",
    "ansi-colors": "^4.1.3",
    "canvas": "^3.1.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "globby": "^14.1.0"
  }
}
