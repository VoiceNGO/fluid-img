{
  "name": "fluid-img",
  "version": "0.0.1",
  "description": "A web component for displaying images that intelligently resize to fit most any container.",
  "author": "Voice NPO, Inc.",
  "license": "Fluid-Img Revenue-Limited License",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "vitest -t \"^[^@]+$\"",
    "test:live": "vitest -t \"@LIVE\"",
    "test:watch": "vitest watch",
    "build": "npm run build:esbuild",
    "build:tsc": "tsc",
    "build:esbuild": "esbuild src/renderer/web-component/web-component.ts --bundle --target=es2020 --define:USE_RANDOM_GENERATOR=true --outfile=build/responsive-img-web-component.js",
    "watch:esbuild": "esbuild src/renderer/web-component/web-component.ts --bundle --target=es2020 --outfile=build/responsive-img-web-component.js --watch",
    "watch": "tsc --watch"
  },
  "exports": {
    "./matrix": "./build/utils/matrix/matrix.js"
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tinybench": "^4.0.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@types/node": "^22.15.21",
    "ansi-colors": "^4.1.3",
    "canvas": "^3.1.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "globby": "^14.1.0"
  }
}
