{
  "name": "fluid-img",
  "version": "0.2.0",
  "description": "A web component for displaying images that intelligently resize to fit most any container.",
  "author": "Voice NPO, Inc.",
  "license": "Fluid-Img Revenue-Limited License",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VoiceNGO/fluid-img.git"
  },
  "bugs": {
    "url": "https://github.com/VoiceNGO/fluid-img/issues"
  },
  "homepage": "https://voicengo.github.io/fluid-img/public/fluid-demo.html",
  "type": "module",
  "main": "./dist/fluid-img.js",
  "module": "./dist/fluid-img.js",
  "types": "./dist/fluid-img.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "exports": {
    ".": "./dist/fluid-img.js",
    "./random": "./dist/fluid-img-random.js",
    "./predictive": "./dist/fluid-img-predictive.js"
  },
  "scripts": {
    "test": "vitest -t \"^[^@]+$\"",
    "test:live": "vitest -t \"@LIVE\"",
    "test:watch": "vitest watch",
    "build": "npm run build:all && npm run build:random && npm run build:predictive && npm run build:demo && npm run copy-to-docs",
    "watch": "npm run watch:all & npm run watch:random & npm run watch:predictive & npm run watch:demo",
    "build:all": "node scripts/build.js --RANDOM_GENERATOR=true --PREDICTIVE_GENERATOR=true --outfile=dist/fluid-img.js",
    "build:random": "node scripts/build.js --RANDOM_GENERATOR=true --outfile=dist/fluid-img-random.js",
    "build:predictive": "node scripts/build.js --PREDICTIVE_GENERATOR=true --outfile=dist/fluid-img-predictive.js",
    "build:demo": "node scripts/build.js --RANDOM_GENERATOR=true --PREDICTIVE_GENERATOR=true --DEMO=true --outfile=dist/fluid-img-demo.js",
    "watch:all": "npm run build:all -- --watch",
    "watch:random": "npm run build:random -- --watch",
    "watch:predictive": "npm run build:predictive -- --watch",
    "watch:demo": "npm run build:demo -- --watch",
    "copy-to-docs": "cp ./dist/* ./docs/public/."
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "@types/node": "^22.15.21"
  }
}
