{
  "name": "fluid-img",
  "version": "0.0.1",
  "description": "A web component for displaying images that intelligently resize to fit most any container.",
  "author": "Voice NPO, Inc.",
  "license": "Fluid-Img Revenue-Limited License",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "vitest -t \"^[^@]+$\"",
    "test:live": "vitest -t \"@LIVE\"",
    "test:watch": "vitest watch",
    "build": "npm run build:esbuild && npm run build:esbuild:predictive && npm run copy-to-docs",
    "watch": "npm run watch:esbuild & npm run watch:esbuild:predictive",
    "build:esbuild": "esbuild src/renderer/web-component/web-component-random.ts --bundle --target=esnext --outfile=build/responsive-img.js",
    "build:esbuild:full": "esbuild src/renderer/web-component/web-component-full.ts --bundle --target=esnext --outfile=build/responsive-img-full.js",
    "build:esbuild:cached": "esbuild src/renderer/web-component/web-component-cached.ts --bundle --target=esnext --outfile=build/responsive-img-cached.js",
    "build:esbuild:predictive": "esbuild src/renderer/web-component/web-component-predictive.ts --bundle --target=esnext --outfile=build/responsive-img-predictive.js",
    "watch:esbuild": "esbuild src/renderer/web-component/web-component-random.ts --bundle --target=esnext --outfile=build/responsive-img.js --watch",
    "watch:esbuild:full": "esbuild src/renderer/web-component/web-component-full.ts --bundle --target=esnext --outfile=build/responsive-img-full.js --watch",
    "watch:esbuild:cached": "esbuild src/renderer/web-component/web-component-cached.ts --bundle --target=esnext --outfile=build/responsive-img-cached.js --watch",
    "watch:esbuild:predictive": "esbuild src/renderer/web-component/web-component-predictive.ts --bundle --target=esnext --outfile=build/responsive-img-predictive.js --watch",
    "copy-to-docs": "cp ./build/* ./docs/public/."
  },
  "exports": {
    "./matrix": "./build/utils/matrix/matrix.js"
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "tinybench": "^4.0.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@types/node": "^22.15.21",
    "ansi-colors": "^4.1.3",
    "canvas": "^3.1.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "globby": "^14.1.0"
  }
}
